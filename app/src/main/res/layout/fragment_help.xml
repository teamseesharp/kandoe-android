<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffdfd"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtAbout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="7dp"
        android:text="@string/help_About_title"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help_About_info"
        android:layout_below="@+id/txtAbout_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:textSize="15dp"
        android:id="@+id/txtAbout"/>

    <TextView
        android:id="@+id/txtHelp_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="7dp"
        android:text="@string/help_Kandoe_title"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="0dp"
        android:layout_below="@id/txtAbout"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help_Kandoe_1"
        android:layout_below="@+id/txtHelp_title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:id="@+id/help_kandoe_1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help_Kandoe_2"
        android:layout_below="@+id/help_kandoe_1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:id="@+id/help_kandoe_2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help_Kandoe_3"
        android:layout_below="@+id/help_kandoe_2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:id="@+id/help_kandoe_3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help_Kandoe_4"
        android:layout_below="@+id/help_kandoe_3"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:id="@+id/help_kandoe_4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help_Kandoe_5"
        android:layout_below="@+id/help_kandoe_4"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:id="@+id/help_kandoe_5"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help_Kandoe_6"
        android:layout_below="@+id/help_kandoe_5"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:id="@+id/help_kandoe_6"/>


</RelativeLayout>
