<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
        android:text="Jongerenwerking"
        android:id="@+id/txtThemeName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/greentag"
        android:padding="5dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hoe laten werken?"
        android:id="@+id/txtDescription"
        android:padding="5dp"
        android:layout_below="@+id/txtThemeName"
        android:layout_alignStart="@+id/txtThemeName"
        android:textSize="12dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Werken ?"
        android:id="@+id/txtSubthemeName"
        android:padding="5dp"
        android:layout_alignBottom="@+id/txtThemeName"
        android:layout_toEndOf="@+id/txtThemeName" />
</RelativeLayout>

