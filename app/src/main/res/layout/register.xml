<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    android:id="@+id/register">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_title"
        android:id="@+id/Title"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/dark_grey"
        android:autoText="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/register_email"
        android:background="@color/white"
        android:hint="@string/register_email"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/Title"
        android:layout_centerHorizontal="true"
        android:textColor="@color/dark_grey"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/register_password"
        android:layout_below="@+id/register_email"
        android:layout_alignLeft="@+id/register_email"
        android:layout_alignStart="@+id/register_email"
        android:layout_marginTop="25dp"
        android:hint="@string/register_password"
        android:background="@color/white"
        android:textColor="@color/dark_grey"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/register_confirmpassword"
        android:layout_below="@+id/register_password"
        android:layout_alignLeft="@+id/register_password"
        android:layout_alignStart="@+id/register_password"
        android:layout_marginTop="25dp"
        android:hint="@string/register_repeatPassword"
        android:background="@color/white"
        android:textColor="@color/dark_grey"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/register_first_name"
        android:layout_below="@+id/register_confirmpassword"
        android:layout_alignLeft="@+id/register_confirmpassword"
        android:layout_alignStart="@+id/register_confirmpassword"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:hint="@string/register_firstName"
        android:textColor="@color/dark_grey"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/register_last_name"
        android:layout_below="@+id/register_first_name"
        android:layout_alignLeft="@+id/register_first_name"
        android:layout_alignStart="@+id/register_first_name"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:hint="@string/register_lastName"
        android:textColor="@color/dark_grey"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/register_txtError"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/register_last_name"
        android:layout_alignLeft="@+id/register_last_name"
        android:layout_alignStart="@+id/register_last_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/register_last_name"
        android:gravity="center">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_create"
            android:id="@+id/btn_createAccount"
            android:background="@color/orange"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/dark_grey"
            android:layout_below="@+id/last_name"
            android:layout_gravity="center"
            />
    </LinearLayout>
</RelativeLayout>