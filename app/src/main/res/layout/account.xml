<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="@string/account_title"/>



    <EditText
        android:id="@+id/lblEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/account_email"
        android:textColor="@color/dark_grey"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_action_email"/>

    <EditText
        android:id="@+id/lblFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblEmail"
        android:layout_below="@+id/lblEmail"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:text="@string/account_firstName"
        android:textColor="@color/dark_grey"
        android:drawableLeft="@drawable/ic_action_person"/>


    <EditText
        android:id="@+id/lblLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblFirstName"
        android:layout_below="@+id/lblFirstName"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:text="@string/account_lastName"
        android:textColor="@color/dark_grey"
        android:drawableLeft="@drawable/ic_action_person"/>




</RelativeLayout>